<UserControl x:Class="GitStractor.Desktop.Controls.FileCommitsTreeMap"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GitStractor.Desktop.Controls"
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <TextBlock Style="{DynamicResource ChartTitle}" DockPanel.Dock="Top">
            Commits per File
        </TextBlock>
        <telerik:RadTreeMap ItemsSource="{Binding FileCommits}" LayoutStrategy="Squarified" Foreground="White">
            <telerik:RadTreeMap.TypeDefinitions>
                <telerik:TypeDefinition TargetTypeName="TreeMapNode" ValuePath="Value" LabelPath="Label">
                    <telerik:TypeDefinition.ItemStyle>
                        <Style TargetType="telerik:RadTreeMapItem" >
                            <Setter Property="Control.Foreground" Value="White" />
                            <Setter Property="Control.FontSize" Value="6pt" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate>
                                        <Border Background="{TemplateBinding Background}">
                                            <Grid>
                                            <TextBlock Text="{Binding Label}" Foreground="Black" Margin="1,1,0,0" />
                                            <TextBlock Text="{Binding Label}" Foreground="White" />
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </telerik:TypeDefinition.ItemStyle>
                    <telerik:TypeDefinition.Mappings>
                        <telerik:ValueGradientColorizer>
                            <!--<GradientStop Offset="1" Color="#F0F921" />-->
                            <GradientStop Offset="1" Color="#FDCB26" />
                            <GradientStop Offset="0.5" Color="#D04D72" />
                            <GradientStop Offset="0" Color="#110889" />
                        </telerik:ValueGradientColorizer>
                    </telerik:TypeDefinition.Mappings>
                </telerik:TypeDefinition>
            </telerik:RadTreeMap.TypeDefinitions>
        </telerik:RadTreeMap>
    </DockPanel>
</UserControl>
